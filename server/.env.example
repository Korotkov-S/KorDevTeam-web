# Порт для API сервера
PORT=3001

# API ключ для аутентификации (установите свой секретный ключ)
# Для генерации можно использовать: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
API_KEY=your-secret-api-key-here

# Окружение (development, production)
NODE_ENV=development

# --- SQLite ---
# Path to sqlite database file (absolute or relative to repo root)
SQLITE_PATH=server/data/content.sqlite

# --- Upload limits ---
UPLOAD_MAX_BYTES=10485760

# --- S3 uploads (optional but recommended) ---
# If S3_BUCKET is set, /api/admin/upload-*-image will upload to S3 and return a public URL.
S3_BUCKET=your-bucket-name
S3_REGION=eu-central-1
# Recommended: public base URL for your bucket (CloudFront or public bucket URL)
S3_PUBLIC_BASE_URL=https://cdn.example.com

# For S3-compatible (MinIO etc), set endpoint and (optionally) path style.
# S3_ENDPOINT=https://s3.your-provider.com
# S3_FORCE_PATH_STYLE=1

# Credentials (for S3-compatible providers like Timeweb.Cloud)
# You can also use standard AWS_ACCESS_KEY_ID / AWS_SECRET_ACCESS_KEY.
S3_ACCESS_KEY=
S3_SECRET_KEY=

# Optional: if your bucket expects ACL on upload (many setups instead use bucket policy)
# S3_ACL=public-read
